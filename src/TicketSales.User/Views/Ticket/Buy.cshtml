@model TicketSales.User.Models.BuyTicketsViewModel
@{
    ViewData["Title"] = "BuyTickets";
}

<h1>Buy tickets</h1>

<form method="post" asp-controller="Ticket" asp-action="Buy">
    <div class="form-group">
        <label for="concertid">Concert:</label>
        <select class="custom-select my-1 mr-sm-2" id="concertid" name="concertid" asp-items="Model.ConcertIds"></select>
        @Html.ValidationMessageFor(x => x.ConcertId)
    </div>
    <div class="form-group">
        <label for="ticketnumber">Number of tickets:</label>
        <input type="text" class="form-control" id="ticketnumber" name="ticketnumber">
        @Html.ValidationMessageFor(x => x.TicketNumber)
    </div>
    <button type="submit" class="btn btn-primary">Buy</button>
</form>